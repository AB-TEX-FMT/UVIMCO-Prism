<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-default border-bottom box-shadow" role="navigation">
            <div class="container-fluid">
                <!-- logo -->
                <div class="navbar-header">
                    <a class="navbar-brand" asp-page="/Index"><img src="~/logo-uvimco.png" width="350"/></a>
                    <button class="btn btn-menu-navbar navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <!-- menu -->
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link navbar-text" asp-page="/Index" data-toggle="tooltip" data-placement="bottom" title="Return to the Main Page">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-text" asp-page="/DataLoader" data-toggle="tooltip" data-placement="bottom" title="Place holder for Data Loader">Data Loader</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-text" asp-page="/Creator" data-toggle="tooltip" data-placement="bottom" title="Place holder for Data Entry screens">Data Entry</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-text" asp-page="/Reports" data-toggle="tooltip" data-placement="bottom" title="View the Reports screen">Data Viewer</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-text" asp-page="/Privacy" data-toggle="tooltip" data-placement="bottom" title="View this applications Privacy policy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="flex-container" style="margin-left: 0px; margin-right: 0px; margin-top: 0px; padding-left:0px; padding-right: 0px; width: 100%">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - Prism - <a asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
